  <img width="150" src="assets/images/@p.getName()" name="@p.getName()" />
} 
</p>

@form(action = routes.Application.learnPicture, 'enctype -> "multipart/form-data") {
    
    <input type="text" name="treshold" value="0.7">    
    <input id="img-form" type="text" name="image" value="">
    <p>
        <input type="submit">
    </p>
    
}
}

<script>
$( "img" ).click(function() {
	$("img").css('border', "solid 0px red");	  
	$("#img-form").val($(this).attr("name"));
	$(this).css('border', "solid 4px red");
});
</script>
